@{ 
    Layout = "_Layout";
    ViewData["Title"] = "Manage";
}

<div>
    <div class="manage-container">
        <div class="input-container">
            <span class="manage-label">Name:</span>
            <input class="manage-input mt-2" />
        </div>
        <div class="input-container">
            <span class="manage-label">Max Players:</span>
            <input class="manage-input mt-2" type="number" />
        </div>
        <div class="input-container">
            <span class="manage-label">Security:</span>
            <select class="custom-select manage-select mt-2">
                <option value="public">Public</option>
                <option value="private">Private</option>
            </select>
        </div>
    </div>
    <div class="users-cards-container">
        <div class="manage-nav">
            <div class="manage-nav-item">Users</div>
            <div class="manage-nav-item">Cards</div>
        </div>
    </div>
</div>

<style>
    .manage-container {
        width: 50%;
        float: left;
    }

    .manage-label {
        font-size: 30px;
        margin-left: 10px;
    }

    .manage-input {
        width: 65%;
        float: right;
        font-size: 20px;
    }

    .manage-select {
        width: 65%;
        float: right;
        border: 1px solid grey;
    }

    .users-cards-container {
        width: 50%;
        float: left;
    }

    .manage-nav {
        width: 100%;
        height: 50px;
        text-align: center;
    }

    .manage-nav-item {
        float: left;
        width: 50%;
        font-size: 30px;
    }

    .manage-nav-item:hover {
        background-color: lightgray;
        cursor: pointer;
    }
</style>