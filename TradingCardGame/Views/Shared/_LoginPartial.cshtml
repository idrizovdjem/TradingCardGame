@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User))
{
    <a class="nav-link text-white" id="button" asp-area="" asp-controller="Channel" asp-action="Index">Channels</a>
    <a class="nav-link text-white" id="button" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
    <form class="form-inline text-white" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
        <button type="submit" id="button" class="nav-link btn btn-link text-white">Logout</button>
    </form>
}
else
{
    <a class="nav-link text-white" id="button" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
    <a class="nav-link text-white" id="button" asp-controller="Account" asp-action="Login">Login</a>
}