@{ 
    Layout = "_Layout";
    ViewData["Title"] = "Create Card";
}

@model TradingCardGame.Models.Card.CreateCardInputModel

<link rel="stylesheet" href="~/css/createCard.css" />

<div >
    <div class="form-container">
        <form asp-controller="Card" asp-action="Create" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <input type="hidden" id="channel" asp-for="ChannelName"/>
            <div class="form-group">
                <input asp-for="Name" placeholder="Card name" class="form-control"/>
            </div>
            <div class="form-group">
                <input asp-for="Image" placeholder="Card image" class="form-control" />
            </div>
            <div class="form-group">
                <select asp-for="Type" class="custom-select">
                    <option value="Trap">Trap</option>
                    <option value="Spell">Spell</option>
                    <option value="Dragon">Dragon</option>
                    <option value="Fire">Fire</option>
                    <option value="Water">Water</option>
                    <option value="Earth">Earth</option>
                    <option value="Air">Air</option>
                </select>
            </div>
            <div class="form-group">
                <textarea asp-for="Description" placeholder="Card description" class="form-control" rows="5"></textarea>
            </div>
            <div class="form-group">
                <input asp-for="Attack" placeholder="Card attack" class="form-control" />
            </div>
            <div class="form-group">
                <input asp-for="Defense" placeholder="Card defense" class="form-control" />
            </div>
            <button class="btn btn-primary w-100">Create Card</button>
        </form>
    </div>
    <div class="card-preview-container">
        <div class="card-preview">
            <div class="card-name">
                <span id="cardName">Card Name</span>
            </div>
            <div class="card-image">
                <img src="https://external-content.duckduckgo.com/iu/?u=http%3A%2F%2Fwww.clker.com%2Fcliparts%2F1%2Fo%2FF%2Fg%2F6%2FN%2Ffull-black-square-hi.png&f=1&nofb=1" id="cardImage"/>
            </div>
            <div class="card-description">
                <span id="cardDescription"></span>
            </div>
            <div class="card-stats" id="cardStats">
                ATT: 0 | DEF: 0
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/createCard.js"></script>
}
